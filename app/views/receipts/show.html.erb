<div class="container">
  <h2>Thank you for your purchase! This is your receipt.</h2>

  <h4>Receipt #<%= @receipt.id %></h4>
  <p>Purchased on: <%= @receipt.created_at.strftime("%B %d, %Y") %></p>
  <p>Purchase total: $<%= @receipt.checkout_total %></p>

  <%= render :partial => 'line_item', :collection => @receipt.line_items %>

  <% if current_user %>
    <%= link_to "View all receipts", user_receipts_path(user_id: current_user.id) %>
  <% end %>
</div>
